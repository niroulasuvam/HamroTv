    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HamroTv">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.NavigationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.LoginActiivty"
            android:exported="false" />

        <!-- ADD THESE MISSING ACTIVITIES -->
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.AddMovieActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.MovieDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.UpdateMovieActivity"
            android:exported="false" />

    </application>

</manifest>