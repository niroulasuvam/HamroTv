<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hamrotv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HamroTv">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- Temporarily commented out for testing LoginActivity directly
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>

        <activity
            android:name="com.example.hamrotv.ui.activity.NavigationActivity"
            android:exported="true" />

        <activity
            android:name="com.example.hamrotv.ui.activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.hamrotv.ui.activity.RegisterActivity"
            android:exported="true" />

        <activity
            android:name="com.example.hamrotv.ui.activity.AddMovieActivity"
            android:exported="false" />

        <activity
            android:name="com.example.hamrotv.ui.activity.MovieDetailActivity"
            android:exported="false" />

        <activity
            android:name="com.example.hamrotv.ui.activity.UpdateMovieActivity"
            android:exported="false" />

    </application>

</manifest>